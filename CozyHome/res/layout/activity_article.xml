<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/pad_10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:text="@string/activity_article_txt_writer" 
            android:textSize="@dimen/txt_15sp"
            android:textColor="@color/activity_article_txt_writer"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/activity_article_txt_writer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:gravity="right"
             />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_article_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/activity_article_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_15sp"
        android:textColor="@color/black"
        android:text="제목" />

    <TextView
        android:id="@+id/activity_article_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내용" />

</LinearLayout>